<div class="col-sm-4 hidden-xs">
  <h1>
    <%= gravatar_for @user %>
    <%= @user.name %>
  </h1>
</div>
<div class="content col-sm-8">
  <div class="html-content">
    <div class="table-responsive">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>項目</th>
            <th>内容</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>名前</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td>メール</td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td>言語</td>
            <td><%= @user.lang %></td>
          </tr>
          <tr>
            <td>国</td>
            <td><%= @user.national %></td>
          </tr>
          <tr>
            <td>地域</td>
            <td><%= @user.region %></td>
          </tr>
          <tr>
            <td>好き</td>
            <td><%= @user.like %></td>
          </tr>
          </tbody>
      </table>
    </div>
  </div>
</div>
