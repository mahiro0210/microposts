<h1>Edit User</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      
      <%= f.label :lang %>
      <%= f.text_field :lang, class: 'form-control' %>
      
      <%= f.label :national %>
      <%= f.text_field :national, class: 'form-control' %>

      <%= f.label :region %>
      <%= f.text_field :region, class: 'form-control' %>
      
      <%= f.label :like %>
      <%= f.text_field :like, class: 'form-control' %>

      <%= f.submit "change my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

